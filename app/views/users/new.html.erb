<div class="new-wrapper container">
  <h1>User 登録画面</h1>
  <%= form_with model: @user, url: users_create_path do |form| %>
    <div class="form-group">
      <label for="user_name">名前</label>
      <%= form.text_field :name, class: "form-control", class: "form-control", placeholder: "ジーズ 太郎" %>
    </div>
    <div class="form-group">
      <label for="self_intro">自己紹介</label>
      <%= form.text_area :self_introduction, class:"form-control", placeholder: "rails勉強中です" %>
    </div>
    <div class="form-group">
      <label for="mail_address">メールアドレス</label>
      <%= form.text_field :email, class:"form-control", placeholder: "test@gmail.com"%>
    </div>
    <div class="form-group">
      <label for="password">パスワード</label>
      <%= form.password_field :password, class:"form-control", placeholder: "test" %>
    </div>
    <div class="form-group">
      <label for="passowrd_confirmation">パスワード(確認)</label>
      <%= form.password_field :password_confirmation, class:"form-control", placeholder: "test"%>
    </div>
    <%= form.submit "登録", class: "btn btn-primary" %>
  <% end %>
</div>
