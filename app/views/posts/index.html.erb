        <thead>
          <th>no</th>
          <th>タイトル</th>
          <th>作成日</th>
          <th>記事</th>
          <th>link</th>
        </thead>
        <tbody>
          <% @posts.each do |p| %>
            <tr>
              <td><%= p.id %></td>
              <td><%= p.title %></td>
              <td><%= p.created_at.strftime("%Y年%m月%d日") %></td>
              <td><%= abstract_contents(p.content) %></td>
              <td><%= link_to "詳細" , "/posts/#{p.id}" %></td>
            </tr>
          <% end %>
