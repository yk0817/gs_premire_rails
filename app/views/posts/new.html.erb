<% if @post.errors.present? %>
  <% @post.errors.full_messages.each do |message| %>
    <div class="alert alert-warning"><%= message %></div>
  <% end %>
<% end %>
<div class="new-wrapper container">
  <%= form_with model: @post,local: true, url: posts_create_path do |form| %>
    <div class="form-group">
      <label for="titleInput">タイトル</label>
      <%= form.text_field :title, class: "form-control", placeholder: "勉強日記" %>
    </div>
    <div class="form-group">
      <label for="content">記事</label>
      <%= form.text_area :content, class:"form-control", rows: 5 %>
    </div>
    <%= form.submit "登録", class: "btn btn-primary"  %>
  <% end %>
</div>
